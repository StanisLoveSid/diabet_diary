<%= current_user.id %>
<%= current_user.email %>

<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>

<%= link_to "Send a friendship", {controller: "users", action: "add_patient", id: @user} %>

<% @user.pending_friends.each do |friend| %>
<%= link_to "Accept friendship of #{friend.email}", {controller: "users", action: "accept_request", user_id: friend.id} %>
<% end %>

<% @user.requested_friends.each do |friend| %>
<%= link_to "Accept friendship of #{friend.email}", {controller: "users", action: "accept_request", user_id: friend.id} %>
<% end %>

<% @user.friends.each do |friend| %>
<%= friend.email %>
<% end %>